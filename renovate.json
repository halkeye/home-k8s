{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "replacements:k8s-registry-move",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch",
    ":timezone(America/Vancouver)",
    "helpers:pinGitHubActionDigests",
    "github>halkeye/home-k8s//.github/renovate/grafanaDashboards.json"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": [
        "Process custom dependencies"
      ],
      "managerFilePatterns": [
        "/inventory/group_vars/all.yml/",
        "/(^|/)charts/.+\\.ya?ml(?:\\.j2)?$/",
        "/charts/system-upgrade-controller/templates/agent.yaml/",
        "/charts/system-upgrade-controller/templates/server.yaml/"
      ],
      "matchStrings": [
        "(?<indentation>\\s*)(?<version_prefix>\\w+)(?<version_word>version|tag): \"(?<currentValue>[^\"]+)\" # renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}"
    },
    {
      "customType": "regex",
      "description": [
        "Process Kustomization CRD dependencies - Image and Github Release are the same version"
      ],
      "managerFilePatterns": [
        "/(^|/)charts/.+\\.ya?ml(?:\\.j2)?$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>\\S+) image=(?<depName>\\S+)\n.*?-\\s(.*?)/(?<currentValue>[^/]+)/[^/]+\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}docker{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Loose versioning for non-semver packages",
      "matchDatasources": [
        "docker"
      ],
      "versioning": "loose",
      "matchPackageNames": [
        "/prowlarr-develop/",
        "/docker-gathio/",
        "/docker-mautrix-signal/",
        "/docker-mautrix-whatsapp/",
        "/docker-mautrix-gmessages/",
        "/docker-n8n/",
        "/docker-yourls/",
        "/kavita/",
        "/searxng/"
      ]
    },
    {
      "matchPackageNames": [
        "photoprism/photoprism",
        "docker.io/photoprism/photoprism"
      ],
      "allowedVersions": "/^[0-9]{2}[0-9]{2}[0-9]{2}$/"
    },
    {
      "matchPackageNames": [
        "felddy/foundryvtt"
      ],
      "allowedVersions": "< 13.0.0"
    },
    {
      "matchPackageNames": [
        "linuxserver/calibre-web"
      ],
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "allowedVersions": "<9.0.0",
      "matchPackageNames": [
        "lmscommunity/logitechmediaserver"
      ]
    },
    {
      "matchPackageNames": [
        "/external-dns/",
        "/nginx/"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "/karakeep/"
      ],
      "allowedVersions": "!/^0.27.0$/"
    },
    {
      "groupName": "Immich",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/immich-app/**"
      ]
    }
  ]
}
